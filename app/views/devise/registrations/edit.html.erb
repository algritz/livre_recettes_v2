<h1>Modifier Usager</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
<%= devise_error_messages! %>

<table>
	<tr>
		<th><%= f.label :nom_utilisateur%></th>
		<th colspan="2"><%= f.label :courriel %></th>
	</tr>
	<tr>
		<td><%= f.text_field :username %>
		<br />
		<i>(laisser vide si vous ne voulez pas le changer)</i></td>
		<td colspan="2"><%= f.email_field :email %></td>

	</tr>
	<tr>
		<th><%= f.label :mot_de_passe %></th>
		<th><%= f.label :confirmation_mot_de_passe %></th>
		<th><%= f.label :mot_de_passe_actuel %> </th>
	</tr>
	<tr>
		<td> <%= f.password_field :password, :autocomplete => "off" %>
		<br />
		<i>(laisser vide si vous ne voulez pas le changer)</i></td>
		<td><%= f.password_field :password_confirmation %></td>
		<td><%= f.password_field :current_password %>
		<br />
		<i>(Le mot de passe actuel est n&eacute;cessaire pour effectuer le changement)</i></td>
	</tr>
	<tr>
		<td class="actions"><%= link_to "Mettre a jour", "#", :onclick=>"$('form').submit()" %></td>
		<td class="actions"><%= link_to "Annuler Changements", :back %></td>
		<td class="cancel"><%= link_to "Annuler mon compte", registration_path(resource_name), :confirm => "Etes-vous certain?", :method => :delete %></td>
	</tr>
</table>
<% end %>
