<h1>Enregistrement</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<table>
	<tr>
		<th><%= f.label :nom_utilisateur%></th>
		<th colspan="2"><%= f.label :courriel %></th>
	</tr>
	<tr>
		<td><%= f.text_field :username %></td>
		<td><%= f.email_field :email %></td>

	</tr>
	<tr>
		<th><%= f.label :mot_de_passe %></th>
		<th><%= f.label :confirmation_mot_de_passe %></th>
	</tr>
	<tr>
		<td> <%= f.password_field :password, :autocomplete => "off" %> <td><%= f.password_field :password_confirmation %></td>
		<br />
		<i>(Le mot de passe actuel est n&eacute;cessaire pour effectuer le changement)</i></td>
	</tr>
</table>

<div class="actions">
	<%= link_to "S'enregistrer", "#", :onclick=>"$('form').submit()" %>
</div>
<% end %>

<%= render :partial => "devise/shared/links" %>
